<!DOCTYPE html>
<html>
<head>

   

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Two Wheels</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>


    <!-- GOOGLE FONT
   
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Mono:wght@300&display=swap" rel="stylesheet">
   -->
</head>
<body>
   


        <div class="navbar navbar-inverse navbar-fixed-top">
             <div class="container">
                 <div class="navbar-header">
                     <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                         <span class="icon-bar"></span>
                         <span class="icon-bar"></span>
                         <span class="icon-bar"></span>
                     </button>
                     @Html.ActionLink("Principal", "Index", "Profile", new { area = "" }, new { @class = "navbar-brand" })
                     @Html.ActionLink("Gestionar productos", "Index", "products", new { area = "" }, new { @class = "navbar-brand" })
                     @Html.ActionLink("Gestionar categorias", "Index", "categories", new { area = "" }, new { @class = "navbar-brand" })
                     @Html.ActionLink("Gestionar ordenes", "Index", "orders", new { area = "" }, new { @class = "navbar-brand" })
                     @Html.ActionLink("Gestionar clientes", "Index", "customers", new { area = "" }, new { @class = "navbar-brand" })
                     @Html.ActionLink("Gestionar stock", "Index", "stocks", new { area = "" }, new { @class = "navbar-brand" })
                 
                 </div>
                 <div class="navbar-collapse collapse">
                     <ul class="nav navbar-nav">
                      
                         @if (User.Identity.IsAuthenticated)
                         {
                           
                            <li><a style="color:aqua" href="/Home/Logout">Cerrar sesion</a></li>

                         }
                     </ul>
                 </div>
             </div>
         </div>
           

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer style="background-color:mediumspringgreen">
                <p style="font-family: 'Red Hat Mono', monospace;">&copy; @DateTime.Now.Year - Two Wheels - © Todos los derechos reservados</p>
            </footer>
        </div>

       <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>